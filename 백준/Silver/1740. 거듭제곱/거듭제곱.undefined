#include <bits/stdc++.h>

#define INF 0x3FFFFFFF

using namespace std;

using ll = long long;
using ld = long double;
using pii = pair<int,int>;
using pll = pair<ll, ll>;

int main()
{
    ios::sync_with_stdio(0);
    cin.tie(0); cout.tie(0);

    ll n;
    cin >> n;

    ll ans = 0;
    ll mult = 1;
    while(n) {
        ans += mult * (n%2);
        n /= 2;
        mult *= 3;
    }
    println("{}", ans);

    return 0;
}